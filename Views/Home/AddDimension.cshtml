@{
    ViewData["Title"] = "Add Dimension";
}

@model intexii.Models.Dimension

<form method="post" style="margin:30px">

    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Id">ID:</label>
        <input asp-for="Id" value="@ViewBag.Did" readonly />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Dimensiontype">Dimension Type:</label>
        <input asp-for="Dimensiontype" placeholder="Enter Dimension Type" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Value">Value:</label>
        <input asp-for="Value" placeholder="Enter Value" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Dimensionid">Dimension ID:</label>
        <input asp-for="Dimensionid" placeholder="Enter Dimension ID" />
    </div>
    <br />
    <button class="btn btn-primary" type="submit">Attach Dimension</button>
    <button class="btn btn-danger" asp-controller="Home" asp-action="Index">Return Home</button>
</form>