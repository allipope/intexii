@{
    ViewData["Title"] = "Analysis Confirmation";
}

@model intexii.Models.DecorationTextile;


<div class="container text-center">
    <h2>Your Analysis Record has been saved if you added one</h2>
    <h3>Would you like to attach a new decoration to this textile?</h3>
    <form style="margin:30px">
        <label>Textile Record:</label>
        <input readonly value="@ViewBag.Values.Tid" />
        <label>Color Record:</label>
        <input readonly value="@ViewBag.Values.Did" />
    </form>

    <form method="post" style="margin:30px">
        <div class="form-group">
            <input asp-for="MainTextileid" value="@ViewBag.Values.Tid" hidden />
        </div>
        <div class="form-group">
            <input asp-for="MainDecorationid" value="@ViewBag.Values.Did" hidden />
        </div>
        <button class="btn btn-primary" type="submit">Attach New Decoration</button>
        <button class="btn btn-danger" type="submit">Don't Add</button>
    </form>
    <br />

</div>