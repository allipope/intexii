@{
    ViewData["Title"] = "Add Color";
}

@model intexii.Models.Color

<form method="post" style="margin:30px">

    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Id">ID:</label>
        <input asp-for="Id" value="@ViewBag.Did" readonly />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Value">Value:</label>
        <input asp-for="Value" placeholder="Enter Value" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Colorid">Color ID:</label>
        <input asp-for="Colorid" placeholder="Enter Color ID" />
    </div>
    <br />
    <button class="btn btn-primary" type="submit">Attach Color</button>
    <button class="btn btn-danger" asp-controller="Home" asp-action="Index">Return Home</button>
</form>