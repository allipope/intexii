@{
    ViewData["Title"] = "Add Record";
}

@model intexii.Models.Burialmain

<div class="text-center">
    <h1>Burial Record</h1>
</div>

<form method="post" style="margin:30px">

    <div asp-validation-summary="All"></div>
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label asp-for="Depth">Burial Depth</label>
        <input asp-for="Depth" class="form-control" placeholder="Enter Burial Depth" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Sex">Sex</label>
        <select asp-for="Sex" class="form-control">
            <option value="">Choose a sex</option>
            <option value="M">Male</option>
            <option value="F">Female</option>
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Haircolor">Hair Color</label>
        <select asp-for="Haircolor" class="form-control">
            <option value="">Choose a color</option>
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="D">D</option>
            <option value="R">R</option>
            <option value="T">T</option>
            <option value="K">K</option>
            <option value="Y">Y</option>
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Headdirection">Head Direction</label>
        <input asp-for="Headdirection" placeholder="Enter Head Direction" class="form-control"/>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Squarenorthsouth">Square North South</label>
        <input asp-for="Squarenorthsouth" class="form-control" placeholder="Enter Square North South"/>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Northsouth">North South</label>
        <select asp-for="Northsouth" class="form-control">
            <option value="">Choose a Direction</option>
            <option value="N">North</option>
            <option value="S">South</option>
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Squareeastwest">Square East West</label>
        <input asp-for="Squareeastwest" placeholder="Enter Square East West" class="form-control"/>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Eastwest">East West</label>
        <select asp-for="Eastwest" class="form-control">
            <option value="">Choose a Direction</option>
            <option value="E">East</option>
            <option value="W">West</option>
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Area">Area</label>
        <input asp-for="Area" placeholder="Enter the Area" class="form-control"/>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Burialnumber">Burial Number</label>
        <input asp-for="Burialnumber" placeholder="Enter Burial Number" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Wrapping">Wrapping</label>
        <select asp-for="Wrapping" class="form-control">
            <option value="">Choose a Wrapping</option>
            <option value="B">B</option>
            <option value="H">H</option>
            <option value="W">W</option>
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Length">Length</label>
        <input asp-for="Length" placeholder="Enter the Length" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Ageatdeath">Age at Death</label>
        <input asp-for="Ageatdeath" placeholder="Enter Age at Death" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Text">Notes</label>
        <input asp-for="Text" placeholder="Enter Notes" class="form-control"/>
    </div>
    <br />
    <button class="btn btn-primary" type="submit">Publish Record</button>
</form>