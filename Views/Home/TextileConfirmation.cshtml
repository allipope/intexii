@{
    ViewData["Title"] = "Textile Confirmation";
}

@model intexii.Models.AnalysisTextile;


<div class="container text-center">
    <h2>Textile record successfully attached</h2>
</div>
    <form style="margin:30px">
        <div class="form-group">
            <label>Textile Record</label>
            <input readonly value="@ViewBag.Values.Tid" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Analysis Record</label>
            <input readonly value="@ViewBag.Values.Aid" class="form-control"/>
        </div>
    </form>
<div class="text-center">
    <form method="post" style="margin:30px">
        <div class="form-group">
            <input asp-for="MainTextileid" value="@ViewBag.Values.Tid" hidden />
        </div>
        <div class="form-group">
            <input asp-for="MainAnalysisid" value="@ViewBag.Values.Aid" hidden />
        </div>
        <button class="btn btn-primary" type="submit">Attach Textile Analysis</button>
        <button class="btn btn-danger" type="submit">Skip</button>
    </form>
    <br />
</div>